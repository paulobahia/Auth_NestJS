generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique  
  password   String
  type       Role     @default(WAITER)
  imagePath  String?
  createdAt  DateTime @default(now())

  @@map("users")
}

enum Role {
  ADMIN
  WAITER
  KITCHEN
  MANAGER
}
